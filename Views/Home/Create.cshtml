@model PersonsCreateViewModels
@*@inject IPerson _person*@


@{ 
    ViewBag.Title = "Create Person";

}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Task" class="col-sm-2 col-form-label">Task</label>
            <div class="col-sm-10">
                <input asp-for="Task" class="form-control" placeholder="Task" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                <input type="Date" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label">Task</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input multiple asp-for="Photo" class="form-control custom-file-input" />
                    <lebel class="custom-file-label">Choose...</lebel>
                </div>
            </div>
            </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">SAVE</button>
            </div>
        </div>
        @*<div class="form-group row">
            <div class="col-sm-10">
              Tota  Persons Count = @_person.GetAllPersonsP().Count()
            </div>
        </div>*@
    </form>
@section Scripts{ 
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
}